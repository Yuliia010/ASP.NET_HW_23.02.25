@page
@model _2_AspPract.Pages.PersonModel
@{
}



<form method="post">
    <div class="form-group">
        <label asp-for="Person.Name">Ім'я:</label>
        <input asp-for="Person.Name" class="form-control" required />
        <span asp-validation-for="Person.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Person.Surname">Прізвище:</label>
        <input asp-for="Person.Surname" class="form-control" required />
        <span asp-validation-for="Person.Surname" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Person.Birthday">Дата народження:</label>
        <input asp-for="Person.Birthday" class="form-control" type="date" required />
        <span asp-validation-for="Person.Birthday" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Person.OtherInfo">Інша інформація:</label>
        <textarea asp-for="Person.OtherInfo" class="form-control" ></textarea>
        <span asp-validation-for="Person.OtherInfo" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Зберегти</button>
</form>

<hr />
<br />

<div>
    <ol>
    @foreach (var person in Model.Persons)
    {
       <li>
            
            <p>Name: @person.Name</p>
            <p>Surname: @person.Surname</p>
            <p>Birthday: @person.Birthday</p>
            <p>OtherInfo: @person.OtherInfo</p>
            
       </li>
       
    }
    </ol>

</div>

<style>
    .form-group {
        width: 600px;
        margin-bottom: 20px;
    }

    form {
        max-width: 600px;
        margin: 0 auto 0 0;
    }
</style>